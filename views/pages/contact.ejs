<%- include('../partials/header.ejs'); -%>
<%- include('../partials/nav.ejs'); -%>

<div class="contact">

    <div class="tell-us" data-aos="fade-right">

        <h1 class="tell-us__title h1-l" data-aos="fade-right">Contact</h1>
        <img class="tell-us__img" src="assets/contact/desktop/image-hero.jpg" alt="photo computer" data-aos="fade-left">

        <div class="tell-us__content" data-aos="fade-right">
            <div class="tell-us__content-wrapper">
                <h2 class="tell-us__sub-title h2">Tell us about your project</h2>
                <p class="tell-us__info body-font">Weâ€™d love to hear more about your project. Please, leave a message
                    below or give
                    us a call. We have two offices, one in Texas and one in Tennessee. If you find
                    yourself nearby, come say hello!</p>
            </div>
        </div>

    </div>


    <div class="details" data-aos="fade-right">

        <h2 class="h2 details__title">Contact Details</h2>

        <div class="details__lists">
            <ul class="details__list">

                <li class="details__item details__item-title">Main Office</li>
                <li class="details__item body-font">Mail: archone@mail.com</li>
                <li class="details__item body-font">Address: 1892 Chenoweth Drive TN</li>
                <li class="details__item body-font">Phone: 123-456-3451</li>
                <li class="details__item">View on Map</li>

            </ul>

            <ul class="details__list">
                <li class="details__item details__item-title">Office II</li>
                <li class="details__item body-font">Mail: archtwo@mail.com</li>
                <li class="details__item body-font">Address: 3399 Wines Lane TX</li>
                <li class="details__item body-font">Phone: 832-123-4321</li>
                <li class="details__item">View on Map</li>
            </ul>
        </div>
    </div>

    <img src="assets/contact/desktop/image-map.png" alt="map details" data-aos="fade-left">



    <div id="form" class="form" data-aos="fade-right">

        <h2 class="h2 form__title">Connect with us</h2>

        <form class="form__items" name="contact-form" action="#" onsubmit="return validateForm()">

            <div class="form__item">
                <input name="name" placeholder="Name" class="form__input" type="text"
                    autocomplete="off">
            </div>

            <div class="form__item">
                <input name="email" placeholder="E-mail" class="form__input" type="email"
                    autocomplete="off">
            </div>

            <div class="form__item">
                <input name="message" placeholder="Message" class="form__input" type="text"
                    autocomplete="off">
            </div>

            <button class="btn form__btn" type="submit">
                <img class="btn-arrow form__arrow" src="assets/icons/icon-arrow.svg" alt="arrow icon" srcset="">
            </button>
        </form>
    </div>

</div>


